<?xml version="1.0" encoding="UTF-8"?>
<!-- schema definition: http://live.gnome.org/GnomeArt/EngineSchema -->

<engine module_name="clearlooks" long_name="Clearlooks" schema_version="0.1">

  <metainfo>
    <version>@VERSION@</version>
    <website>http://www.gnome.org</website>
    <author>
      <name>Andrea Cimitan</name>
      <email>andrea.cimitan@gmail.com</email>
    </author>
    <author>
      <name>Benjamin Berg</name>
      <email>benjamin@sipsolutions.net</email>
    </author>
    <author>
      <name>Richard Stellingwerff</name>
      <email>remenic@gmail.com</email>
    </author>
    <author>
      <name>Daniel Borgmann</name>
      <email>daniel.borgmann@gmail.com</email>
    </author>
  </metainfo>

  <option name="style" type="enumeration" default="CLASSIC">
    <_long_name>Style</_long_name>
    <enumeration value="CLASSIC">
      <_label>Classic</_label>
    </enumeration>
    <enumeration value="GLOSSY">
      <_label>Glossy</_label>
    </enumeration>
    <enumeration value="GUMMY">
      <_label>Gummy</_label>
    </enumeration>
    <enumeration value="INVERTED">
      <_label>Inverted</_label>
    </enumeration>
  </option>

  <option name="reliefstyle" type="enumeration" default="0">
    <_long_name>Relief Style</_long_name>
    <enumeration value="0">
      <_label>Inset</_label>
    </enumeration>
    <enumeration value="1">
      <_label>Shadow</_label>
    </enumeration>
  </option>

  <option name="menubarstyle" type="enumeration" default="0">
    <_long_name>Menubar Style</_long_name>
    <enumeration value="0">
      <_label>Flat</_label>
    </enumeration>
    <enumeration value="1">
      <_label>3d-ish (gradient)</_label>
    </enumeration>
    <enumeration value="2">
      <_label>3d-ish (button)</_label>
    </enumeration>
  </option>

  <option name="toolbarstyle" type="enumeration" default="0">
    <_long_name>Toolbar Style</_long_name>
    <_comment>Requires style Glossy or Gummy</_comment>
    <enumeration value="0">
      <_label>Flat</_label>
    </enumeration>
    <enumeration value="1">
      <_label>3d-ish (gradient)</_label>
    </enumeration>
  </option>
  
  <option name="colorize_scrollbar" type="boolean" default="FALSE">
    <_long_name>Colorize Scrollbar</_long_name>
    <_description>Colorize Scrollbar</_description>
  </option>
  
  <option name="scrollbar_color" type="color" default="#999999">
    <_long_name>Scrollbar Color</_long_name>
    <_description>Sets the Color of Scrollbars</_description>
  </option>
  
  <option name="animation" type="boolean" default="FALSE">
    <_long_name>Animations</_long_name>
    <_description>Enable Animations on Progressbars</_description>
  </option>

  <option name="disable_focus" type="boolean" default="FALSE">
    <_long_name>Disable focus drawing</_long_name>
    <_description>This option allows to disable the focus drawing. The primary purpose is to create screenshots for documentation.</_description>
  </option>
  
  <option name="contrast" type="real" default="1.0">
    <minimum>0</minimum>
    <maximum>20</maximum>
    <precision>2</precision>
    <_long_name>Contrast</_long_name>
    <preferred_widget>slider</preferred_widget>
  </option>
  
  <option name="radius" type="real" default="3.0">
    <minimum>0</minimum>
    <maximum>10</maximum>
    <precision>2</precision>
    <_long_name>Radius</_long_name>
    <preferred_widget>slider</preferred_widget>
  </option>
  
</engine>
